<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/overlayImage"
        android:layout_width="@dimen/activity_icon_width"
        android:layout_height="@dimen/activity_icon_height"
        android:layout_marginStart="@dimen/standard_half_padding"
        android:layout_marginTop="@dimen/standard_half_padding"
        android:visibility="gone"
        app:tint="@color/primary_button_background_color"
        tools:visibility="visible"
        android:layout_gravity="top|start"
        android:contentDescription="@string/file_icon"
        android:src="@drawable/ic_check_circle" />

</FrameLayout>

